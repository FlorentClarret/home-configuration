[user]
    name = Florent Clarret
    email = florent.clarret@gmail.com

[core]
    autocrlf = input
    editor = vim
    tool = vimdiff
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.config/git/gitignore

[alias]
    i = init
    c = clone

    st = status

    ci = commit
    cim = commit -m
    ca = commit --amend
    
    ch = checkout
    br = branch
    mr = merge
    pl = pull
    pr = pull --rebase
    rb = rebase
    ps = push
    
    unstage = reset HEAD --
    
    last = log -1 HEAD
    qlog = log --pretty=oneline --abbrev-commit --graph --decorate
    
    di = diff
    changes = diff --name-status
    dic = diff --cached
    diffstat = diff --stat
    
    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"


[color]
    diff = auto
    status = auto
    branch = auto

[branch]  
    autosetuprebase = always

[push]
    default = matching

[web]
    browser = vivaldi
